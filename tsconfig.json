{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "webpack-env"
    ],
    "sourceMap": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src",
      "@types/node"
    ],
    //  引入的库文件
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "esnext",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "src/asset/json/*.json"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}